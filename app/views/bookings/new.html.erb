Date:       <%= @date %><br>
From:       <%= @from_airport %><br>
To:         <%= @to_airport %><br>
Flight no.: <%= @flight.id %>

<%= form_for :flights, name: "flight_info", url: "/bookings/create", method: "post" do |f| %>

  <% @flight.passenger_number.times do %>
    <%= f.fields_for @flight.passengers.build do |passenger| %>
      Name:   <%= passenger.text_field(:name) %>
      Email:  <%= passenger.text_field(:email) %>
      
      <%= hidden_field_tag(:flight_id, @flight.id) %>
      <%= hidden_field_tag(:from, @from_airport) %>
      <%= hidden_field_tag(:to, @to_airport) %>
      <%= hidden_field_tag(:date, @date) %>
    <% end %>
  <% end %>

  <%= f.submit "Submit" %>
<% end %>